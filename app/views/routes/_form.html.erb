<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="form_field">
    <%= f.label :destination %><br />
    <%= f.text_field :destination %>
  </div>
	Visibility:
	<div>
    <%= f.radio_button :visibility, 'private' %>
    <%= f.label :visibility, 'Private - not visible to others', :value => 'private' %><br />
		<%= f.radio_button :visibility, 'shared' %>
    <%= f.label :visibility, 'Shareable - anyone who knows the link can see it', :value => 'shared' %><br />
		<%= f.radio_button :visibility, 'recommended' %>
    <%= f.label :visibility, 'Recommended (choice routes only please) - shows up in public searches of the area', :value => 'recommended', :id => 'visibility_recommended_label' %><br />
  </div>
	<div class="form_field">
    <%= f.check_box :slabs_allowed %>
		<%= f.label :slabs_allowed, 'Slabs Allowed' %><br />
  </div>
	<div class="field">
    <%= f.hidden_field :itn_file %>
  </div>
	<div class="field">
    <%= f.hidden_field :jumps %>
  </div>
	<div class="field">
    <%= f.hidden_field :meters %>
  </div>
	<div class="field">
    <%= f.hidden_field :seconds %>
  </div>
  <div class="actions">
	<% path = @route.empty? ? routes_path : @route %>
    <%= f.submit %> <%= link_to 'Cancel', path %>
  </div>
<% end %>

