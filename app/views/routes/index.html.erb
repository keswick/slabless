<h1>Listing routes</h1>

<% if @routes.size > 0 %>
	<script type="text/javascript">
	  routes = <%= raw @routes.to_json %>;
	</script>
	<div id="route_canvas" style="width:90%; height:100%"></div>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Destination</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= route.name %></td>
    <td><%= route.destination %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div id="r_zone"></div>

<%= link_to 'New Route', new_route_path %>
